<div class="container form-style">
    <br>
    <h2>Add material</h2>
    <form action="/materials/create" method="POST">
        <p><span style="color:red">*</span> <span class="required-field">Required</span></p>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Select category <span style="color:red">*</span></label>
            <select class="form-control" name="category">
                {{#each categories}}
                <option>{{name}}</option>
                {{/each}}
            </select>
        </div>
        <br> <br>
        <div class="form-group">
            <label for="formGroupExampleInput">Description <span style="color:red">*</span></label>
            <input type="text" class="form-control" id="formGroupExampleInput1" placeholder="Material description"
                minlength="1" maxlength="170" name="description" required>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput1">Rate</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="999.99" step="0.01"
                max="999.99" pattern="^\d*(\.\d{0,2})?$" name="rate">
        </div>
        <button type="submit" class="btn btn-success">Add</button>
        <a href="/materials/" class="btn btn-danger">Cancel</a>
    </form>
</div>